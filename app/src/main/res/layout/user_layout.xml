<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailContentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="detailContentUser"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailLocationUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="15"
        android:text="detailLocationUser"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/detailContentUser"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/detailContentUser"
        app:layout_constraintRight_toLeftOf="@+id/talkToUser"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/detailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="detailUser"
        app:layout_constraintLeft_toLeftOf="@+id/detailLocationUser"
        app:layout_constraintTop_toBottomOf="@+id/detailLocationUser" />

    <TextView
        android:id="@+id/detailDateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detailDateUser"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/detailUser"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/detailUser"
        app:layout_constraintRight_toLeftOf="@+id/helpFinish"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/talkToUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:text="联系"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/detailDateUser" />

    <Button
        android:id="@+id/helpFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="确定完成"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/talkToUser"
        app:layout_constraintTop_toBottomOf="@+id/talkToUser" />

</android.support.constraint.ConstraintLayout>